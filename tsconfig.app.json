/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true, "module": "esnext", "moduleResolution": "node", "lib": ["es2022", "dom"], "sourceMap": true, "outDir": "./dist/out-tsc", "resolveJsonModule": true, "experimentalDecorators": true, "emitDecoratorMetadata": true, "strict": true, "baseUrl": "./",
    
    "types": [
      "node"
    ]
  },
  "files": [
    "src/main.ts",
    "src/main.server.ts",
    "server.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
